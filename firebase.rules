rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products
    match /products/{document} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Allow users to read/write their own notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    // Allow users to read/write their own orders
    match /orders/{orderId} {
      allow read, update, delete: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow users to read/write their own messages
    match /messages/{messageId} {
      allow read, update, delete: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow public read access to other collections
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

// Allow public read access to storage
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}